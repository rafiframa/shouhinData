<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1D8870 0%, #155a4d 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .login-container {
            background: white;
            padding: 2.5rem 2rem;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 420px;
            text-align: center;
        }

        img {
            margin-bottom: 1.5rem;
            width: 160px;
        }

        h1 {
            color: #2a2a2a;
            font-size: 22px;
            margin-bottom: 0.3rem;
        }

        .subtitle {
            color: #888;
            font-size: 14px;
            margin-bottom: 2rem;
        }

        .error-message {
            background: #fff3f3;
            color: #d33;
            padding: 0.8rem 1rem;
            border-radius: 8px;
            border: 1px solid #f8cfcf;
            margin-bottom: 1.5rem;
            font-size: 14px;
        }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            background: #4285f4;
            color: white;
            padding: 0.75rem 1rem;
            border: none;
            border-radius: 8px;
            text-decoration: none;
            font-size: 15px;
            font-weight: 500;
            transition: 0.2s ease;
            width: 100%;
        }

        .google-btn:hover {
            background: #3367d6;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(66, 133, 244, 0.25);
        }

        .restriction-note {
            margin-top: 2rem;
            color: #777;
            font-size: 13px;
            border-top: 1px solid #eaeaea;
            padding-top: 1.25rem;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <img src="/images/logo.png" alt="Company Logo" width="200">
        <h1>商品データベース</h1>
        <p class="subtitle">ファームエイジの社員専用ログイン</p>

        <% if (error) { %>
            <div class="error-message">
                <%= error %>
            </div>
            <% } %>

                <a href="/auth/google" class="google-btn">
                    Googleでログイン
                </a>

                <div class="restriction-note">
                    ※ @farmage.co.jp のメールアドレスのみ利用可能です
                </div>
    </div>
</body>

</html>